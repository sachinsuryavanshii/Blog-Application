<div class="author">
    <h1 class="author__heading">Search Result</h1>
</div>

<section class="articals">
    <ul class="artical-ul">
        <% data.forEach(post => { %>
            <li>
                <a href="/post/<%= post._id%>">
                    <span><%= post.title %></span>
                    <span class="artical-list__date"><%= post.createdAt.toDateString() %></span>
                </a>
            </li>
        <% }) %>
    </ul>
    
</section>